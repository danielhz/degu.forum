<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="degu.forum">
  <body>

    <metal:content-core fill-slot="content-core">
      <metal:content-core define-macro="content-core">

	<table class="grid listing" style="width:100%">
	  <tr>
            <th>Título</th><th>Descripción</th>
	  </tr>
	  <tr tal:repeat="thread container/objectValues">
    	    <td><a tal:attributes="href thread/absolute_url" tal:content="thread/title"></a></td>
    	    <td><span tal:content="thread/description"></span></td>
	  </tr>
	  <table>

      </metal:content-core>
    </metal:content-core>

  </body>
</html>
